<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AndroidSampleApp" parent="Theme.Material3.DayNight">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.AndroidSampleApp.Splash" parent="Theme.SplashScreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <!-- Background color for splash screen -->
        <item name="windowSplashScreenBackground">@color/catch_design_red</item>

        <!-- Icon shown in splash -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>

        <!-- Icon animation duration -->
        <item name="windowSplashScreenAnimationDuration">1000</item>

        <!-- Optional: Icon background color -->
        <item name="postSplashScreenTheme">@style/Theme.AndroidSampleApp</item>
    </style>
</resources>

